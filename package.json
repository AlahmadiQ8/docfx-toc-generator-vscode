{
	"name": "docfx-toc-generator",
	"displayName": "DocFx Toc Generator",
	"description": "Generates a Table of Contents (TOC) in YAML format for DocFX. This extension is an implementation of [TocDocFxCreation](https://github.com/Ellerbach/docfx-companion-tools) in Visual Studio Code. ",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.58.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:**/docfx.json"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "doxfx-toc-generator.generateYamlToc",
				"title": "Generate YAML Toc"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "doxfx-toc-generator.generateYamlToc",
					"group": "doxfx",
					"when": "explorerResourceIsFolder == true"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.58.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
